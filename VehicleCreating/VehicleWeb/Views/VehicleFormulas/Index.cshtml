@model IEnumerable<Domain.VehicleFormula>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}

<h1>Admin panel</h1>


    <a class="btn btn-success mb-3" asp-action="Create">Create New</a>
    <a class="btn btn-success mb-3" asp-action="SetAdmin">Set admin</a>
    <a class="btn btn-success mb-3" asp-action="ExcellReader" asp-controller="Shopping">Add vehicle types with excell</a>
    <a class="btn btn-success mb-3" asp-action="Index" asp-controller="VehicleParts">Go to the vehicle parts</a>
    <a class="btn btn-success mb-3" asp-action="OrdersAdmin" asp-controller="Shopping">See all orders</a>

<table class="table" id="tblData2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.engines)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.chassis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.doors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.wheels)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.engines)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.chassis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.doors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.wheels)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.image) *@
                 <img src="@item.image" alt="@item.Name" style="max-width:100px; max-height:100px;" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" />
    <script src="~/js/product2.js"></script>
}