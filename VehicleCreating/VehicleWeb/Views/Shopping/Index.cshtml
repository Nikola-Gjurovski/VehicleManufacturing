
@model Domain.DTO.ShoppingVehicleFormulaTypeDto

@*
    
For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var successMessage = TempData["Message"] as string;
}<style>
     #explanation {
         background-color: #F5F5DC;
     }
     #inside{
         margin-left:20px;
         margin-right:20px;
     }
</style>
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-danger">
        @successMessage
    </div>
}
<div class="container mt-5">
<div id="explanation" class="d-flex justify-content-center mb-5">
    <div class=" d-flex justify-content-center mb-3" id="inside">
        <div class="text-center mb-3">
            <img src="https://w7.pngwing.com/pngs/235/916/png-transparent-maintenance-logo-car-repair-logo-cartoon.png" alt="VehicleWeb Logo" style="height: 80px; width: 100px;" />
            <h6 class="text-black text-center">Give us some basic informations about your vehicle.</h6>
            
            <form method="post" asp-action="Index" class="text-center">
                <div class="form-group">
                    <label asp-for="VehicleName" class="control-label">Vehicle Name</label>
                    <input asp-for="VehicleName" class="form-control text-center" />
                    <span asp-validation-for="VehicleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VehicleColor" class="control-label">Vehicle Color</label>
                    <input asp-for="VehicleColor" class="form-control text-center" />
                    <span asp-validation-for="VehicleColor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Id" class="control-label">Choose vehicle type</label>
                    @Html.DropDownListFor(x => Model.Id, new SelectList(Model.vehicleFormulas, "Id", "Name"), new { @class = "form-control text-center" })
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyName" class="control-label">Company Name</label>
                    <input asp-for="CompanyName" class="form-control text-center" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" />
                </div>
               </form>
             </div>
    </div>
</div>
</div>